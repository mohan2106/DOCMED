<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/medicine_order"
                android:visibility="gone"/>
            <include layout="@layout/appointment_book_summery"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170sp"
                android:orientation="horizontal"
                android:layout_marginBottom="5sp"
                android:weightSum="2"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:layout_marginTop="5sp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="#F0E6C9"
                    android:layout_weight="1"
                    android:layout_marginRight="5sp"
                    android:background="#ffffff"
                    android:elevation="4sp">
                    <LinearLayout
                        android:id="@+id/book_appointment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="5">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="3"
                            android:src="@drawable/doctor_circular_logo"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="2"
                            android:text="Book Appointment"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:visibility="gone"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:elevation="4sp">
                    <LinearLayout
                        android:id="@+id/buy_medicine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5sp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:weightSum="5">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/medicine_logo"
                            android:layout_height="0sp"
                            android:layout_weight="3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="2"
                            android:text="Order medicine"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0sp"
                    android:backgroundTint="#D4F6FA"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:elevation="4sp">
                    <LinearLayout
                        android:id="@+id/call_us_for_booking"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5sp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:weightSum="5">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:src="@drawable/call_us"
                            android:layout_weight="3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:text="Call Us for booking"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:padding="8sp"
                app:cardCornerRadius="5sp"
                android:elevation="4sp"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:padding="12sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HEALTH BOOK"
                            android:textSize="20sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="track your health record, e-prescription and e-report"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:src="@drawable/health_book"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>


</FrameLayout>